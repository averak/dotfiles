{
  "mcpServers": {
    "Context7": {
      "command": "npx",
      "args": [
        "-y",
        "@upstash/context7-mcp@latest"
      ]
    }
  },
  "general": {
    "preferredEditor": "neovim"
  },
  "tools": {
    "core": [
      "LSTool",
      "ReadFileTool",
      "WriteFileTool",
      "GrepTool",
      "GlobTool",
      "EditTool",
      "ReadManyFilesTool",
      "MemoryTool",
      "WebFetchTool",
      "WebSearchTool",
      "ShellTool(git status)",
      "ShellTool(git diff)",
      "ShellTool(git log)",
      "ShellTool(pwd)"
    ],
    "shell": {
      "enableInteractiveShell": true
    }
  },
  "context": {
    "fileFiltering": {
      "respectGitIgnore": true
    }
  },
  "security": {
    "auth": {
      "selectedType": "oauth-personal"
    }
  },
  "ui": {
    "theme": "Atom One"
  },
  "privacy": {
    "usageStatisticsEnabled": false
  }
}
